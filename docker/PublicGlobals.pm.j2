# DB settings

$DocDBHostName = "cms-docdb.cern.ch";

$Public = 1;
$DebugOutput = 0;

$db_name       = "{{ DOCDB_CONFIG_DATABASE_NAME | default('DocDB') }}";
$db_host       = "{{ DOCDB_CONFIG_DATABASE_HOST | default('DocDB') }}";
$db_rwuser     = "";             # You can change the names of the accounts if you are
$db_rwpass     = "";          # hosting more than one DocDB on the same SQL server
$db_rouser     =  "{{ DOCDB_CONFIG_RO_USER | default('docdbro') }}";
$db_ropass     =  "{{ DOCDB_CONFIG_RO_PASSWORD | default('NOTSET') }}";

# Root directories and URLs

$file_root   = "/data/DocDB/";
$script_root = "/data/www/cgi-bin/PublicDocDB/";
$web_root    = "https://$DocDBHostName/PublicDocDB/";
$cgi_root    = "https://$DocDBHostName/cgi-bin/PublicDocDB/";
$cgi_path    = "/cgi-bin/PublicDocDB/"; # Used for cookies

1;
